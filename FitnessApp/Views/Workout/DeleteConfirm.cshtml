@model FitnessApp.Models.WorkoutDto

@{
    ViewBag.Title = "DeleteConfirm";
}

<h2>Are you sure you want to delete this workout?</h2>

    <h2><a href="/Workout/List">No, Take me Back.</a></h2>

    <h2>@Model.WorkoutName</h2>
    <div>Date: @Model.WorkoutDate </div>
    <div>Duration: @Model.WorkoutDuration minutes</div>
    <div>Category Name: @Model.CategoryName</div>

<form action="/Workout/Delete/@Model.WorkoutId" method="POST">
    <input type="submit" value="Yes, Confirm Delete" />
</form>